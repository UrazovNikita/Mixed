@model Mixed.ViewModels.UserEditViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<link rel="stylesheet" href="https://unpkg.com/dropzone@5/dist/min/dropzone.min.css" type="text/css" />

<h2>@Localizer["UserEdit"]</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Account" asp-action="UserEdit" asp-route-name="@User.Identity.Name" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="form-label" asp-for="About">@Localizer["About"]</label>
                <input asp-for="About" class="form-control" />
                <span asp-validation-for="About" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="OldPassword">@Localizer["OldPassword"]</label>
                <input asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Password">@Localizer["Password"]</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="PasswordConfirm">@Localizer["PasswordConfirm"]</label>
                <input asp-for="PasswordConfirm" class="form-control" />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Image">@Localizer["PasswordConfirm"]</label>
                <input asp-for="Image" class="form-control" />
            </div>
            <button type="submit" class="btn btn-body">@Localizer["BtnEditDone"]</button>
        </form>
    </div>
</div>

