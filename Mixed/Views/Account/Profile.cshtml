@model Mixed.Models.User
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="row">
    <div class="container col-md-6">
        <h2>@Localizer["UserProfile"]</h2>
        <h5>@Localizer["Name"]</h5>
        <h4>@User.Identity.Name</h4>
        <h5>@Localizer["About"]</h5>
        <h4>@ViewBag.User.About</h4>
        <img style='width:80px; height:80px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(ViewBag.User.Image))" />

        <a asp-controller="Account" asp-action="UserEdit" asp-route-name="@User.Identity.Name">
            <input type="button" class="btn btn-body" value="@Localizer["Edit"]" />
        </a>

    </div>
    <div class="container col-md-6">
        <a asp-controller="Collections" asp-action="UserCollections" asp-route-sortOrder="@ViewBag.ThemeSort" asp-route-name="@User.Identity.Name">
            <input type="button" class="btn btn-body" value="@Localizer["Manage"]" />
        </a>
        <h5>@Localizer["YourCollections"]</h5>
        <table class="table table-striped table-hover">
            <tr>
                <td>
                    @Localizer["CollectionName"]

                </td>
                <td>
                    @Localizer["Theme"]
                </td>
                <td>
                    @Localizer["CountItems"]
                </td>
                <td>
                    @Localizer["Description"]
                </td>
            </tr>

            @foreach (var collection in ViewBag.Collections)
            {
<tr>
    <td><a asp-controller="Collections" asp-action="Index" asp-route-collectionId="@collection.Id">@collection.Name</a></td>
    <td>@collection.Theme</td>
    <td>@collection.CountItems</td>
    <td>@collection.Description</td>
</tr>
}
        </table>
    </div>
</div>





