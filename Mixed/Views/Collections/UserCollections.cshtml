@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<h4>@Localizer["Collections"]</h4>
<form id='collections' method="post">
    @if (User.IsInRole("admin") || User.Identity.Name.Equals(ViewBag.User.UserName))
    {
        <a class="btn btn-body" asp-controller="Collections" asp-action="Create" asp-route-username="@ViewBag.User.UserName">@Localizer["BtnCreateCollections"]</a>
        <button type="submit" class="btn btn-body" asp-controller="Collections" asp-action="Delete" asp-route-username="@ViewBag.User.UserName">@Localizer["BtnDeleteCollections"]</button>
    }
    <table class="table table-striped table-hover">
        <tr>            
            <th><a asp-controller="Collections" asp-action="UserCollections" asp-route-sortOrder="@ViewBag.NameSort" asp-route-name="@ViewBag.User.UserName">@Localizer["Name"]</a></th>
            <th><a asp-controller="Collections" asp-action="UserCollections" asp-route-sortOrder="@ViewBag.ThemeSort" asp-route-name="@ViewBag.User.UserName">@Localizer["Theme"]</a></th>
            <th><a asp-controller="Collections" asp-action="UserCollections" asp-route-sortOrder="@ViewBag.CountSort" asp-route-name="@ViewBag.User.UserName">@Localizer["NumberItems"]</a></th>
            <th>@Localizer["Summary"]</th>
            @if (User.IsInRole("admin") || User.Identity.Name.Equals(ViewBag.User.UserName))
            {
        <th><input type="checkbox" name="cb_all"></th>            }
        </tr>

        @if (Model != null)
            @foreach (var collection in Model)
            {
    <tr>        
        <td><a asp-controller="Collections" asp-action="Index" asp-route-collectionId="@collection.Id">@collection.Name</a></td>
        <td>@collection.Theme</td>
        <td>@collection.CountItems</td>
        <td><markdown>(collection.Description)</markdown></td>
        @if (User.IsInRole("admin") || User.Identity.Name.Equals(ViewBag.User.UserName))
        {
    <td><input type="checkbox" class="collection" name="selectedCollections" value="@collection.Id" /></td>                    }
    </tr>
            }
    </table>
</form>

<script>
    var f = document.getElementById('collections');
    f.cb_all.onchange = function (e) {
        var el = e.target || e.srcElement;
        var qwe = el.form.getElementsByClassName('collection');
        for (var i = 0; i < qwe.length; i++) {
            if (el.checked) {
                qwe[i].checked = true;
            } else {
                qwe[i].checked = false;
            }
        }
    }
</script>